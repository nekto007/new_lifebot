TELEGRAM_TOKEN=""

# Database Configuration
# For SQLite (local development):
# DATABASE_URL="sqlite+aiosqlite:///./data.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql+asyncpg://habit_user:YOUR_PASSWORD@postgres:5432/habit_tracker"
DATABASE_URL="sqlite+aiosqlite:///./data.db"

# PostgreSQL Password (used in docker-compose.yml)
POSTGRES_PASSWORD="habit_password_change_me"

# LLM Settings (optional - fallback content will be used if not set)
OPENAI_API_KEY=""
LLM_MODEL=gpt-5-nano

# Language Learning API Settings (optional - for reading books integration)
# Important: Each user configures their own token via /language_setup command
LANGUAGE_API_URL="http://localhost:5001/api/telegram"
LANGUAGE_API_TIMEOUT=30
LANGUAGE_CACHE_TTL=300
